{
    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "urgent": "",
            "active": "",
            "default": ""
        },
        "persistent_workspaces": {
            "*": 5
        }
    },
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 18,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close"
    },
    "hyprland/window": {
        "rewrite": {
            "(.*) - Google Chrome": " $1",
            "(.*) — Mozilla Firefox": " $1"
        },
        "separate-outputs": true,
        "max-length": 50
    },
    "custom/updates": {
        "format": "  {}",
        "tooltip-format": "{}",
        "escape": true,
        "return-type": "json",
        "exec": "updates",
        "restart-interval": 60,
        "on-click-middle": "launch $TERMINAL -e installupdates",
        "tooltip": true
    },
    "custom/outlook": {
        "format": "",
        "on-click": "launch firefox --new-window https://outlook.office.com/mail/",
        "tooltip": false
    },
    "custom/browser": {
        "format": "",
        "on-click": "launch firefox",
        "tooltip": false
    },
    "custom/chatgpt": {
        "format": "",
        "on-click": "launch firefox --new-window https://chat.openai.com",
        "tooltip": false
    },
    "custom/appmenu": {
        "format": "",
        "on-click": "sleep 0.1 && launch rofi -show",
        "tooltip": false
    },
    "custom/exit": {
        "format": "",
        "on-click": "wlogout",
        "tooltip": false
    },
    "tray": {
        "spacing": 10
    },
    "clock": {
        "tooltip-format": "<tt>{calendar}</tt>",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "on-scroll": 1,
            "on-click-right": "mode",
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "days": "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-click-forward": "tz_up",
            "on-click-backward": "tz_down",
            "on-scroll-up": "shift_down",
            "on-scroll-down": "shift_up"
        },
        "format-alt": "{:%Y-%m-%d}"
    },
    "cpu": {
        "interval": 2,
        "format": "/  {usage}% ",
        "states": {
            "warning": 50,
            "critical": 80
        },
        "on-click-middle": "launch missioncenter"
    },
    "memory": {
        "interval": 2,
        "format": "/  {percentage}% ",
        "tooltip-format": "{used:0.1f}G/{total:0.1f}G",
        "states": {
            "warning": 80,
            "critical": 90
        },
        "on-click-middle": "launch missioncenter"
    },
    "disk": {
        "interval": 30,
        "format": " {percentage_used}% ",
        "path": "/",
        "on-click-middle": "launch missioncenter"
    },
    "network": {
        "interval": 2,
        "format": "{ifname}",
        "format-wifi": " {signalStrength}%",
        "format-alt": " {bandwidthUpBytes}  {bandwidthDownBytes}",
        "format-ethernet": " {ipaddr}",
        "format-disconnected": "", //An empty format will hide the module.
        "tooltip-format": "ifname: {ifname}\nessid: {essid}\nip: {ipaddr}/{cidr}\nspeed:  {bandwidthUpBytes}  {bandwidthDownBytes}",
        "tooltip-format-disconnected": "",
        "on-click-middle": "launch nm-applet"
    },
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": " {capacity}%",
        "format-plugged": " {capacity}%",
        "format-alt": "{icon}  {time}",
        "format-icons": [
            " ",
            " ",
            " ",
            " ",
            " "
        ]
    },
    "pulseaudio": {
        "scroll-step": 2,
        "format": "{icon} {volume}%",
        "format-bluetooth": "{volume}% {icon} ",
        "format-bluetooth-muted": " ",
        "format-muted": "",
        "format-source": " {volume}%",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": [
                "",
                " ",
                " "
            ]
        },
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "on-click-middle": "launch pavucontrol"
    },
    "backlight": {
        "format": "{icon} {percent}%",
        "format-icons": [
            "",
            "",
            "",
            "",
            "",
            "",
            "",
            "",
            ""
        ]
    },
    "temperature": {
        "critical-threshold": 80,
        "format": "/ {icon} {temperatureC}°C ",
        "format-icons": [
            "",
            "",
            "",
            "",
            ""
        ],
        "on-click-middle": "launch missioncenter"
    },
    "user": {
        "format": "{user}",
        "interval": 60,
        "icon": false
    }
}
