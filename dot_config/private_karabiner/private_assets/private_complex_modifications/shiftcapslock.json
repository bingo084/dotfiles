{
  "title": "Change shift to dual keys, capslock and shift.",
  "rules": [
    {
      "description": "Change shift to shift if pressed with other keys, change shift to capslock if pressed alone.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "caps_lock"
            }
          ]
        }
      ]
    }
  ]
}
